<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.itsad.inventariovirtual.InventoryCreationActivity">

    <EditText
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/editTextNomeInventario"
        android:id="@+id/nomeInventario" />
    <EditText
                android:textAlignment="center"
        android:hint="Descrição inventário"
        android:id="@+id/descricaoInventario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/saveInventory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/descricaoInventario"
        android:src="@drawable/icon_acept_png"
        />
</LinearLayout>
